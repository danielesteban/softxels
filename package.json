{
  "name": "softxels",
  "author": "Daniel Esteban Nombela",
  "license": "MIT",
  "watch": {
    "compile:mesher": {
      "extensions": "c",
      "patterns": [
        "src/mesher.c"
      ],
      "runOnChangeOnly": false
    },
    "compile:worldgen": {
      "extensions": "c",
      "patterns": [
        "src/worldgen.c"
      ],
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "compile:mesher": "sh src/compile.sh mesher",
    "compile:worldgen": "sh src/compile.sh worldgen",
    "watch:build": "npm run build -- -w",
    "watch:mesher": "npm-watch compile:mesher",
    "watch:worldgen": "npm-watch compile:worldgen",
    "serve:example": "cd example && npm start",
    "postinstall": "cd example && npm install",
    "start": "run-p watch:build watch:mesher watch:worldgen serve:example"
  },
  "devDependencies": {
    "@rollup/plugin-wasm": "^5.1.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "rollup": "^2.53.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-web-worker-loader": "^1.6.1"
  }
}
